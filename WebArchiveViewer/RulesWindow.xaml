<Window x:Class="WebArchiveViewer.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebArchiveViewer"
        mc:Ignorable="d"
        Title="Групповые правила" Height="450" Width="800">
    <Window.DataContext>
        <local:RulesControl />
    </Window.DataContext>
    <Grid>
        <TreeView ItemsSource="{Binding MainRules}">
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding Rules}" DataType="{x:Type local:GroupRule}">
                    <DockPanel Margin="0,2">
                        <TextBlock Text="{Binding Rules.Count,StringFormat=[{0}] }" Margin="5,0"/>
                        <TextBox Text="{Binding GroupName}" MinWidth="200"/>
                        <TextBox Text="{Binding FoundText}" HorizontalAlignment="Right" Margin="20,0"/>
                        <Button Content="X" Margin="5,0" Padding="3,0" />
                        <Button Content="+" Margin="5,0" Padding="3,0" />
                    </DockPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
